{
  "name": "@datachain/contracts",
  "version": "1.0.0",
  "description": "Governance and utility contracts for Datachain Rope",
  "scripts": {
    "compile": "hardhat compile",
    "compile:forge": "forge build",
    "test": "hardhat test",
    "test:forge": "forge test",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network testnet",
    "verify": "hardhat verify",
    "coverage": "hardhat coverage",
    "gas-report": "REPORT_GAS=true hardhat test",
    "lint": "solhint 'src/**/*.sol'",
    "lint:fix": "solhint 'src/**/*.sol' --fix"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "hardhat": "^2.19.0",
    "hardhat-deploy": "^0.11.0",
    "solhint": "^4.0.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KazeONGUENE/rope.git"
  },
  "keywords": [
    "datachain",
    "rope",
    "governance",
    "dao",
    "smart-contracts"
  ],
  "author": "Datachain Foundation",
  "license": "Apache-2.0"
}
